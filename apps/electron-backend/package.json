{
  "name": "comflowy",
  "version": "0.0.0",
  "private": true,
  "main": "layers/main/dist/index.js",
  "build": {
    "appId": "com.comflowy.app",
    "mac": {
      "icon": "buildResources/icon.icns"
    },
    "win": {
      "icon": "buildResources/icon.png"
    },
    "linux": {
      "icon": "buildResources/icon.png"
    }
  },
  "scripts": {
    "dev": "node scripts/watch.js",
    "build": "npm run build:main && npm run build:preload",
    "build:main": "cd ./layers/main && vite build",
    "build:preload": "cd ./layers/preload && vite build",
    "build:preload:types": "dts-cb -i \"layers/preload/tsconfig.json\" -o \"layers/preload/exposedInMainWorld.d.ts\"",
    "compile": "cross-env MODE=production npm run build && cd ./package && npm run package",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts",
    "typecheck:main": "tsc --noEmit -p layers/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p layers/preload/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload"
  },
  "devDependencies": {
    "@comflowy/common": "workspace:*",
    "@comflowy/node": "workspace:*",
    "@electron-forge/cli": "^7.2.0",
    "@types/configstore": "^6.0.2",
    "@types/node": "^14.14.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "cli-truncate": "^4.0.0",
    "configstore": "^6.0.0",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "^27.1.2",
    "electron-builder": "^23.0.3",
    "electron-context-menu": "^3.6.1",
    "electron-devtools-installer": "3.2.0",
    "electron-dl": "^3.5.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^5.0.1",
    "electron-next": "^3.1.5",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.7",
    "eslint": "8.8.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-vue": "8.4.0",
    "express": "^4.18.2",
    "fastq": "^1.15.0",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.21.0",
    "tsconfig": "workspace:*",
    "typescript": "4.5.5",
    "uuid": "9.0.1",
    "vite": "2.7.13",
    "ws": "^8.14.2"
  }
}
