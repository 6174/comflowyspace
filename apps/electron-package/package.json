{
  "name": "comflowy",
  "version": "0.0.4-alpha",
  "private": true,
  "main": "layers/main/dist/index.js",
  "scripts": {
    "start": "electron ./",
    "compile": "cd ../electron-frontend && pnpm build && cd ../electron-backend && npm run compile && cd ../electron-package && node ./scripts/pre-package.js",
    "package": "electron-builder --dir",
    "make": "electron-builder --mac",
    "makewin": "electron-builder --win"
  },
  "build": {
    "appId": "com.flowy.app",
    "files": [
      "**/*"
    ],
    "extraResources": [],
    "directories": {
      "buildResources": "assets",
      "output": "out"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico",
      "installerHeaderIcon": "logo.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Comflowyspace"
    },
    "mac": {
      "icon": "logo.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "afterSign": "./scripts/after-sign.js",
    "npmRebuild": true,
    "publish": [
      {
        "provider": "github",
        "owner": "6174",
        "repo": "comflowyspace"
      }
    ]
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "regedit": "^5.1.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@electron/osx-sign": "^1.0.5",
    "cli-truncate": "^4.0.0",
    "cross-env": "7.0.3",
    "dotenv": "^16.3.2",
    "dts-for-context-bridge": "0.7.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "3.2.0",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^10.0.1"
  }
}